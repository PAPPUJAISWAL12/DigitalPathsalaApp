@model List<ProductList>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <a asp-action="Create" asp-controller="Products" class="btn btn-dark">Add New Product</a>
    <div class="card">
        <div class="float-end">
            
        </div>
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>S.N</th>
                        <th>ProductName</th>
                        <th>File</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++count)</td>
                            <td>@item.ProductName</td>
                            <td>
                                
                                <img src="@item.ProductFile" width="100" />
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


           
        }
        else
        {
            <h1>No Data</h1>
        }
    </div>
</div>
